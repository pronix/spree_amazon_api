<%= render :partial => 'admin/shared/configuration_menu' %>

<h1><%= t('edit_amazon_settings') %></h1>

<%= form_tag(admin_amazon_path, :method => :put) do %>

  <p>
    <label>
	  <input name="preferences[redirect_to_amazon]" type="hidden" value="0" />
      <%= check_box_tag('preferences[redirect_to_amazon]', "1", Spree::Config[:redirect_to_amazon]) %>
      <%= t('redirect_to_amazon_on_buy') %>
    </label>
  </p>

  <p class="form-buttons">
    <%= button t('update') %>
    <%= t("or") %> <%= link_to t("cancel"), admin_amazon_url %>
  </p>
<% end %>
